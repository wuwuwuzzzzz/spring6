<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--  set 方法注入  -->
    <bean id="book" class="com.wxz.di.Book">
        <property name="bookName" value="前端开发" />
        <property name="author" value="WXZ" />
    </bean>

    <!--  构造器注入  -->
    <bean id="bookCon" class="com.wxz.di.Book">
        <constructor-arg name="bookName" value="后端开发" />
        <constructor-arg name="author" value="WXZ" />
    </bean>

</beans>